@keyframes lit
  0%
    opacity 0
  100%
    opacity 1

.requestItem::after
  position absolute
  content ''
  top 0
  bottom 0
  left 0
  right 0
  z-index 20
  border-radius 12px
  opacity 1
  pointer-events none

.requestItem:hover
  transform translateY(-1px)
  position relative
  z-index 300000
  background var(--ghostB)
  transform translateY(-1px)
  border-bottom 2px solid var(--ghostZ)
  box-shadow 0px 8px 30px -12px var(--ghostX)
  
.requestItem:active
  transform translateY(0px)
  box-shadow 0px 2px 4px var(--ghostX)
  position relative
  z-index 300000
  background var(--ghostB)
  transform translateY(0px)
  box-shadow 0px 2px 4px var(--ghostX)

.requestItem
  cursor pointer
  position relative
  width 100%
  z-index 1
  overflow hidden
  font-family 'MainFont'
  font-weight 300
  box-shadow 0px 4px 6px var(--ghostY)
  border-bottom 2px solid var(--ghostZ)
  border-radius 17px
  background var(--ghostA)
  cursor pointer
  position relative
  width 100%
  z-index 1
  margin-top 3px
  overflow hidden
  font-family 'MainFont'
  font-weight 300
  box-shadow 0px 4px 6px var(--ghostY)
  border-bottom 2px solid var(--ghostZ)
  cursor pointer
  *
    pointer-events none

  .requestItemBackground
    position absolute
    top 0px
    left 0px
    right 0px
    bottom 0
    border-radius 1.5px
    background linear-gradient(135deg, transparent 0%, transparent 50%)
    opacity 0
    z-index 200
    border-radius 18px

  .requestItemCorner
    position absolute
    top -420px
    left -120px
    width 460px
    height 460px
    transform rotate(65deg)
    border-radius 6px
    opacity 0

  .requestItemDetails
    position relative
    display flex
    align-items center
    justify-content space-between
    text-transform uppercase
    font-weight 400
    font-size 11px
    color var(--moon)
    margin 14px

    span
      letter-spacing 1px
      padding-left 8px

    .requestItemDetailsSlide
      display flex
      align-items center

    .requestItemDetailsIndicator
      height 6px
      width 6px
      border-radius 3px
      background var(--moon)
      z-index 4
      animation lit infinite linear alternate 1s

  .requestItemDetailsGood
    color var(--good)
    .requestItemDetailsIndicator
      background var(--good)

  .requestItemDetailsBad
    color var(--bad)
    .requestItemDetailsIndicator
      background var(--bad)

  .requestItemRow
    position relative
    z-index 3
    width 100%
    display flex
    align-items center
    margin-bottom 10px
    box-sizing border-box

    .requestItemRowIcon
      width 40px
      height 20px
      display flex
      justify-content center
      align-items center
      position relative
      // color var(--good)
      
    .requestItemRowIconLarge
      width 40px
      height 20px
      display flex
      justify-content center
      align-items center
      //color var(--moon)

    .requestItemRowChainIcon
      position absolute
      top 0px  
      right 20px
      bottom 0px
      display flex
      justify-content center
      align-items center
      width 20px
      border-radius 10px

    .requestItemRowTitle
      position relative
      margin-left 9px
      font-size 12px
      font-weight 400

    .requestItemRowTitleLarge
      position relative
      font-weight 300
      display flex
      justify-content center
      align-items center

  .requestItemLine
    background var(--good)
    height 2px
    border-radius 2px
    margin 14px
    box-sizing border-box
    display flex

    .requestItemLineDash
      width calc((100% / 16) - 8px) 
      margin-right 8px
      height 2px
      display none

  .requestItemTitle
    position relative
    font-family 'MainFont'
    font-weight 300
    display flex
    justify-content flex-start
    align-items center
    font-size 14px
    font-weight 300
    margin 14px

    .requestItemTitleTime
      position absolute
      top 0
      right 0
      bottom 0
      display flex
      justify-content center
      align-items center

      .requestItemTitleTimeItem
        height 26px
        display flex
        justify-content center
        align-items center
        font-size 12px
        font-weight 600

    .requestItemMain
      margin-left 10px

    .requestItemTitleMain
      font-size 16px
      font-weight 400
      margin-bottom 5px
      margin-top 5px

  .requestItemTitleSub
    display flex
    justify-content flex-start
    align-items center
    font-size 11px
    font-weight 300

    .requestItemTitleSubIcon
      margin 1px 10px 0px 1px
      color var(--outerspace)

    .requestItemTitleSubText
      font-weight 400
      margin 0px 0px 0px 0px

  .requestItemTime
    position absolute
    top 0px  
    right 24px
    bottom 0px
    font-size 12px
    font-weight 300
    display flex
    justify-content center
    align-items center

  .requestItemSource
    position absolute
    top 0px  
    right 20px
    bottom 0px
    font-size 12px
    font-weight 400
    display flex
    justify-content center
    align-items center
    //color var(--moon)
    margin-top -2px

    div
      margin-right 5px
    svg
      position relative
      top 1px

  .requestItemIcon
    width 39px
    display flex
    justify-content center
    align-items center
    border-radius 10px
    z-index 2
    border-radius 20px
    -webkit-app-region no-drag
    transition none
    pointer-events auto
    transform translate3d(0, 0, 0)
    cursor pointer

    // .requestItemIconFrame
    //   color var(--good)
    //   border-radius 8px
    //   display flex
    //   justify-content center
    //   align-items center

  .requestItemOrigin
    top 16px
    right 16px
    position absolute
    font-weight 300
    margin-left 2px
    display flex
    align-items center
    font-size 10px
    margin-top 3px

    .requestItemOriginIcon
      position relative
      top -1px
      display flex
      justify-content center
      align-items center

  .requestItemStatus
    font-size 10px
    bottom 16px
    left 64px
    position absolute
    font-weight 300
    margin-left 2px

  .requestItemRight
    width 64px
    display flex
    justify-content center
    align-items center
    transform scaleX(-1)
    position relative
    left 1px

