.requestItemSummary
  display flex
  justify-content center
  align-items center
  padding 8px 16px 18px 16px
  font-size 12px
  font-weight 500

.requestItemHeader, .requestItemHeader:hover, .requestItemHeader:active
  background none
  box-shadow none
  border-bottom none
  transform none
  margin-top 0px
  margin-bottom 0px
